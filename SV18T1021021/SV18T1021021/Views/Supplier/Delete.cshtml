@model SV18T1021021.DomainModel.Supplier
@{ ViewBag.Title = "Xóa nhà cung cấp"; }

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/supplier/delete/@Model.SupplierID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.SupplierName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mã nhà cung cấp:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ContactName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Address</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Country</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thành phố:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.City</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.SupplierID</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021021.BusinessLayer.CommonDataService.InUsedSupplier(Model.SupplierID))
                    {
        <p class=" text-danger">
            Không được xóa loại hàng này!
        </p> }
    else
    {
        <button type="submit" class="btn btn-danger">
            <i class="fa fa-remove"></i>Đồng ý xóa
        </button>}
                    <a class="btn btn-warning" href="~/shipper">
                        <i class="fa fa-ban"></i> Bỏ qua
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">

    </div>

</div>