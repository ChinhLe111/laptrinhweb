@model SV18T1021021.DomainModel.Shipper
<div class="box box-primary">

    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/shipper/save" method="post">
            @Html.HiddenFor(n => n.ShipperID)
            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(n => n.ShipperName, new { @class = "form-control", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(n => n.ShipperName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(n => n.Phone, new { @class = "form-control", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(n => n.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-danger">
                    @Html.ValidationSummary()
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/shipper">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">

    </div>

</div>