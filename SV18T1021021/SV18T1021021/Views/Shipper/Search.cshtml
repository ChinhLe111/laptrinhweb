@model SV18T1021021.Models.ShipperPaginationResultModel
@{
    Layout = null;
}
<div class="row" style="margin: 1px 0 10px 0;">
    <div class="col-sm-12">
        Có <strong>@Model.RowCount</strong> người giao hàng trong tổng số <strong>@Model.PageCount</strong> trang
    </div>
</div>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th>Tên người giao hàng</th>
                <th>Số điện thoại</th>
                <th style="width:75px">&nbsp;
                <th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.ShipperName</td>
                    <td>@item.Phone</td>
                    <td class="text-right">
                        <a href="~/shipper/edit/@item.ShipperID" class="btn btn-xs btn btn-flat btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/shipper/delete/@item.ShipperID" class="btn btn-xs btn btn-flat btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascripts:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>
