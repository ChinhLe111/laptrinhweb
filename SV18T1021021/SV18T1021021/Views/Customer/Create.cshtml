@model SV18T1021021.DomainModel.Customer
@{ }

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/customer/save" method="post">

            @Html.HiddenFor(n => n.CustomerID)

            <div class="form-group">
                <label class="control-label col-sm-2">Tên khách hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(n => n.CustomerName, new { @class = "form-control", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(n=>n.CustomerName,"",new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên giao dịch:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(n => n.ContactName, new { @class = "form-control", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(n => n.ContactName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên địa chỉ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(n => n.Address, new { @class = "form-control", @autofocus = "autofocus" })

                    @Html.ValidationMessageFor(n => n.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(n => n.Country,SelectListHelper.Countries(),new {@class ="form-control"})
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thành phố:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(n =>n.City, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(n => n.PostalCode, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-danger">
                  @Html.ValidationSummary()
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/customer">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">

    </div>

</div>